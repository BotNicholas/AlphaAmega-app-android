<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая светлая тема -->
    <style name="Theme.Light" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Основной цвет приложения -->
        <item name="colorPrimary">@color/colorPrimaryLightMode</item>
        <!-- Цвет текста на панели действий -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Цвет фона для основного содержимого -->
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:statusBarColor">@color/colorPrimaryLightMode</item>

        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView.Light</item>
    </style>

    <!-- Базовая темная тема -->
    <style name="Theme.Dark" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Основной цвет приложения -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Цвет текста на панели действий -->
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Цвет фона для основного содержимого -->
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>

        <item name="bottomNavigationStyle">@style/Widget.BottomNavigationView.Dark</item>

    </style>


    <style name="Widget.BottomNavigationView.Light" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <!-- Цвет фона нижнего навигационного меню -->
        <item name="itemBackground">@color/bottom_navigation_background_light</item>
        <item name="itemTextColor">@color/colorPrimaryLightMode</item>
        <item name="itemIconTint">@color/colorPrimaryLightMode</item>
    </style>

    <style name="Widget.BottomNavigationView.Dark" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <!-- Цвет фона нижнего навигационного меню -->
        <item name="itemBackground">@color/bottom_navigation_background_dark</item>
        <item name="itemTextColor">@color/colorPrimary</item>
        <item name="itemIconTint">@color/colorPrimary</item>
    </style>

</resources>